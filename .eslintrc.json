{
    "env": {
        "browser": true,
        "es2021": true
    },
    // "extends": [
    //     "plugin:react/recommended",
    //     "google"
    // ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 4],
        "no-multi-spaces": ["error"],
        "require-jsdoc" : 0,
        "semi": [1,"never"],
        "padding-line-between-statements": [
            "error",
            { "blankLine": "always", "prev": ["const", "let", "var"], "next": "*"},
            { "blankLine": "any",    "prev": ["const", "let", "var"], "next": ["const", "let", "var"]},
            { "blankLine": "always",    "prev": ["import", "cjs-import"], "next": ["export","function"]}

        ]
    },
    "settings":{
        "react":{
            "version":"detect"
        }
    }
}
